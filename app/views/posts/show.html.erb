<header>
  <p> <%= @post.created_at.strftime("%A, %B, %d") %></p>
  <h1><%= @post.title %></h1>
</header>
<div id='content'>
  <%= markdown @post.content %>
</div>

<%= render 'disqus' %>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %>
